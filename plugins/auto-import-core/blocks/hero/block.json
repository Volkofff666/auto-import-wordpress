{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "aic/hero",
  "title": "Hero Section",
  "category": "auto-import",
  "icon": "cover-image",
  "description": "Hero section with title, subtitle, button and background image",
  "supports": {
    "align": ["wide", "full"],
    "html": false
  },
  "attributes": {
    "title": {
      "type": "string",
      "default": "Импорт автомобилей из-за рубежа"
    },
    "subtitle": {
      "type": "string",
      "default": "Доставка авто с аукционов Японии, США и Европы"
    },
    "buttonText": {
      "type": "string",
      "default": "Выбрать авто"
    },
    "buttonUrl": {
      "type": "string",
      "default": "/cars/"
    },
    "backgroundImageUrl": {
      "type": "string",
      "default": ""
    },
    "backgroundImageId": {
      "type": "number"
    }
  },
  "textdomain": "auto-import-core",
  "editorScript": "file:./index.js",
  "render": "file:./render.php"
}