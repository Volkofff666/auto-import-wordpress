{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "aic/hero",
  "title": "Hero Section",
  "category": "auto-import",
  "icon": "cover-image",
  "description": "Main hero banner with background image, title and button",
  "supports": {
    "html": false
  },
  "textdomain": "auto-import-core",
  "editorScript": "file:./index.js",
  "render": "file:./render.php",
  "attributes": {
    "title": {
      "type": "string",
      "default": "Welcome to Auto Import"
    },
    "subtitle": {
      "type": "string",
      "default": "Import cars from around the world"
    },
    "buttonText": {
      "type": "string",
      "default": "View Catalog"
    },
    "buttonUrl": {
      "type": "string",
      "default": "/cars/"
    },
    "backgroundImageUrl": {
      "type": "string",
      "default": ""
    },
    "backgroundImageId": {
      "type": "number",
      "default": 0
    }
  }
}